<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.egrek.chidiebere.QuiPay">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/iconround"
        android:label="@string/app_name"
        android:roundIcon="@drawable/iconround"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:configChanges="screenSize"
            android:theme="@style/LoginStyle"
            android:windowSoftInputMode="stateVisible|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".CreditCardActivity" />
        <activity android:name=".ChooseCardTypeActivity" />
        <activity android:name=".AddCreditCardActivity" />
        <activity android:name=".ScanActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".PersonalInformationActivity" />
        <activity
            android:name=".SignUpActivity"
            android:configChanges="screenSize"
            android:theme="@style/LoginStyle"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity android:name=".PhoneNumberActivity" />
        <activity android:name=".AddressActivity" />
        <activity android:name=".LoginAndSecurityActivity" />
        <activity android:name=".NotificationsActivity" />
        <activity android:name=".AddAddressActivity"></activity>
    </application>

</manifest>
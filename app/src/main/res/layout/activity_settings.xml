<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="16dp"
            app:expandedTitleMarginBottom="48dp"
            app:expandedTitleTextAppearance="@style/ExpandedTextView"
            app:collapsedTitleTextAppearance="@style/ToolbarTitle"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">

            <RelativeLayout
                android:id="@+id/backdrop"
                android:background="@drawable/gradient_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax" >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:src="@drawable/profile"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="72dp"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:clickable="true"
                    android:transitionName="profile_image" />

                <LinearLayout
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/profile_image"
                    android:layout_marginTop="16dp"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/profile_first_name"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Space
                        android:layout_width="4dp"
                        android:layout_height="8dp" />

                    <TextView
                        android:id="@+id/profile_last_name"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:id="@+id/profile_email"
                    android:text=""
                    android:layout_centerHorizontal="true"
                    android:textSize="14sp"
                    android:layout_marginLeft="16dp"
                    android:layout_below="@id/profile_name"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <!-- As our statusBar is transparent below and content is moved behind our toolbar has to include the padding on top so we use this area -->
            <android.support.v7.widget.Toolbar
                android:id="@+id/settings_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:titleTextAppearance="@style/ToolbarTitle"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_scan"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/credit_card_row"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/ripple_bg"
                android:clickable="true">

                <ImageView
                    android:src="@drawable/ic_credit_card"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:text="Credit Cards"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="72dp"
                    android:layout_marginLeft="72dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="72dp"
                    android:layout_marginStart="72dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="match_parent"
                    android:background="#44ffffff"
                    android:layout_height="0.5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/personal_info_row"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/ripple_bg"
                android:clickable="true"
                android:onClick="openPersonalInfoActivity">

                <ImageView
                    android:src="@drawable/ic_person_outline"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:text="Personal Information"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="72dp"
                    android:layout_marginLeft="72dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="72dp"
                    android:layout_marginStart="72dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="match_parent"
                    android:background="#44ffffff"
                    android:layout_height="0.5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/login_security_row"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/ripple_bg"
                android:clickable="true">

                <ImageView
                    android:src="@drawable/ic_lock"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:text="Login and Security"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="72dp"
                    android:layout_marginLeft="72dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="72dp"
                android:layout_marginStart="72dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:background="#44ffffff"
                android:layout_height="0.5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/notifications_row"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/ripple_bg"
                android:clickable="true">

                <ImageView
                    android:src="@drawable/ic_notifications"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:text="Notifications"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="72dp"
                    android:layout_marginLeft="72dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="72dp"
                    android:layout_marginStart="72dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="match_parent"
                    android:background="#44ffffff"
                    android:layout_height="0.5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/help_row"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/ripple_bg"
                android:clickable="true">

                <ImageView
                    android:src="@drawable/ic_help"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:text="Help"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="72dp"
                    android:layout_marginLeft="72dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="72dp"
                    android:layout_marginStart="72dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="match_parent"
                    android:background="#44ffffff"
                    android:layout_height="0.5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/legal_row"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/ripple_bg"
                android:clickable="true">

                <ImageView
                    android:src="@drawable/ic_gavel"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:text="Legal"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="72dp"
                    android:layout_marginLeft="72dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="72dp"
                    android:layout_marginStart="72dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="match_parent"
                    android:background="#44ffffff"
                    android:layout_height="0.5dp" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>